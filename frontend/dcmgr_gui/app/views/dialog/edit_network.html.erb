<div id="edit_network_dialog">
  <table>
    <tr>
      <td><%= t("dialog.edit_network.network_id")%>: </td>
      <td><%= @network_id %></td>
      <td><input type="hidden" id="network_id" value="<%= @network_id %>"></td>
    </tr>
    <tr>
      <td><%= t("dialog.edit_network.display_name")%>: </td>
      <td><input id="network_display_name" type="text" size=43 value="<%= @display_name %>"></td>
    </tr>
  </table>

  <fieldset id="dc_network_field">
    <legend><%= t("dialog.edit_network.dc_network") %></legend><legend>
    </legend><table cellspacing="5" cellpadding="5">
      <tbody>
        <tr>
          <td><%= t("dialog.edit_network.dc_network_id")%>: </td>
          <td><%= @network['dc_network']['uuid'] %></td>
	</tr><tr>
          <td><%= t("dialog.edit_network.dc_network_name")%>: </td>
          <td><%= @network['dc_network']['name'] %></td>
	</tr><tr>
          <td><%= t("dialog.edit_network.dc_network_description")%>: </td>
          <td><%= @network['dc_network']['description'] %></td>
	</tr><tr>
          <td><%= t("dialog.edit_network.dc_network_allow_new_networks")%>: </td>
          <td><%= @network['dc_network']['allow_new_networks'] %></td>
	</tr>
      </tbody>
    </table>
  </fieldset>

  <fieldset id="dhcp_field">
    <legend><%= t("dialog.edit_network.dhcp_group") %></legend><legend>
    </legend><table cellspacing="5" cellpadding="5">
      <tbody>
	<tr><th><span id="dhcp_ranges"><%= t("dialog.edit_network.dhcp_ranges") %></span></th>
	  <th><span id="edit_dhcp_ranges"><%= t("dialog.edit_network.edit_dhcp_ranges") %></span></th>
	</tr><tr>
	  <td>
	    <select id="select_dhcp_ranges" size="5" multiple="multiple" name="select_dhcp_ranges"></select>
	  </td>
	  <td>
            <table>
              <tr><input id="begin_dhcp_range" type="text" size=18 value=""></tr>
              <tr><input id="end_dhcp_range" type="text" size=18 value=""></tr>
              <tr><button id="add_dhcp_range"><%= t("dialog.edit_network.add_dhcp_range") %></button></tr>
            </table>
	  </td>
	</tr>
      </tbody>
    </table>
  </fieldset>

</div>
